{
  "urls": "http://0.0.0.0:8080",
  "Serilog": {
    "Using": ["Serilog.Sinks.Console"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "Microsoft.AspNetCore.Diagnostics.ExceptionHandlerMiddleware": "Fatal",
        "Microsoft.AspNetCore.Authentication": "Warning",
        "Microsoft.AspNetCore.Authorization": "Warning",
        "Microsoft.AspNetCore.Routing": "Warning",
        "Microsoft.AspNetCore.StaticFiles": "Warning",
        "Microsoft.AspNetCore.Hosting": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj}{NewLine}{Exception}",
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithEnvironmentName"
    ],
    "Properties": {
      "Application": "TheTemplate",
      "Environment": "Testing-Deployment"
    }
  },
  "AllowedHosts": "*",
  "HealthCheckPath": "/api/health",
  "S3AwsSettings": {
    "ServiceUrl": "http://localhost:9000",
    "AccessKey": "$S3_KEY",
    "SecretKey": "$S3_SECRET",
    "BucketName": "the-template-project",
    "PublicUrl": "http://localhost:9000",
    "PreSignedUrlExpirationInMinutes": 1440,
    "Protocol": 1
  },
  "SecuritySettings": {
    "JwtSettings": {
      "SecretKey": "$JWT_SECRET",
      "ExpireTimeAccessTokenInMinute": 1440,
      "ExpireTimeRefreshTokenInDay": 7
    }
  },
  "OpenTelemetrySettings": {
    "Options": 3,
    "IsEnabled": false
  },
  "SerilogSettings": {
    "IsDistributeLog": false
  },
  "EmailSettings": {
    "From": "[your email]",
    "Host": "[your host]",
    "Port": 587,
    "Username": "[your email]",
    "Password": "[your password]",
    "MailType": 1
  },
  "ForgotPasswordUrl": "http://localhost:3000/resetPassword",
  "ForgotPasswordExpiredTimeInHour": 1,
  "OpenApiSettings": {
    "ApplicationName": "TheTemplate",
    "Version": "v1",
    "Name": "Anonymous",
    "Email": "minhsang.work25@gmail.com"
  },
  "SwaggerRoutePrefix": "docs",
  "RedisDatabaseSettings": {
    "IsEnabled": false
  },
  "QueueSettings": {
    "OriginQueueName": "queue:the_queue",
    "MaxRetryAttempts": 10,
    "MaximumDelayInSec": 90
  },
  "ElasticsearchSettings": {
    "IsEnabled": false
  },
  "DatabaseSettings": {
    "DatabaseConnection": "$DB_CONNECTION"
  },
  "CacheSettings": {
    "CachingExpirationInMinute": 5
  }
}
